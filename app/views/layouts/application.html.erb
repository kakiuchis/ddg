<!DOCTYPE html>
<html>
  <head>
    <title>Ddg</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  	<nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">Top</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <%= link_to "DDG", root_path, class:"navbar-brand" %>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">            
            <li><%= link_to 'Gログイン', user_google_omniauth_authorize_path unless user_signed_in? %></li>
            <li><%= link_to 'login as ' + current_user.email, edit_user_registration_path if user_signed_in? %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete if user_signed_in? %></li>
          </ul>
        </div>
      </div>
    </nav>
  	<div class="container">
      <div id="notice">
        <%= flash[:notice] %>
      </div>
      <div id="alert">
        <%= flash[:alert] %>
      </div>
      <%= yield %>
      <a href="#" class="topBtn" id="topBtn">TOP</a>
    </div>
    <script>
      $(document).ready(function(){
        $("#topBtn").hide();
        $(window).on("scroll", function(){
          if($(this).scrollTop() > 100){
            $("#topBtn").fadeIn("fast");
          }
          else{
            $("#topBtn").fadeOut("fast");
          }
        });
        $('#topBtn').click(function(){
          $('body,html').animate({
            scrollTop: 0
          }, 400); 
            return false;
        });
      });
    </script>
  </body>
</html>
